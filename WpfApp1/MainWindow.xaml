        <TextBox     x:Name="txtCurrentApoapsis"     Text=""                                          HorizontalAlignment="Left" VerticalAlignment="Top"    Margin="499,214,0,0"   Height="20"  Width="100" TextWrapping="Wrap"  Focusable="False" IsReadOnly="True" Grid.Column="2"/>
