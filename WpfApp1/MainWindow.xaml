        <TextBox     x:Name="txtVertBurnStartAlt"    Text=""                                          HorizontalAlignment="Left" VerticalAlignment="Top"    Margin="773,186,0,0"   Height="20"  Width="100" TextWrapping="Wrap" Focusable="False" IsReadOnly="True" Grid.Column="2"/>
