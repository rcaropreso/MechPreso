        <Button      x:Name="btnCopyLog"             Content="Copy Log"                               HorizontalAlignment="Left" VerticalAlignment="Top"    Margin="773,386,0,0"   Height="23"  Width="119" Grid.Column="2" Click="BtnCopyLog_Click"/>
