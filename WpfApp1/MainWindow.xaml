        <CheckBox    x:Name="chkDeorbit"             Content="Deorbit Body"                           HorizontalAlignment="Left" VerticalAlignment="Top"    Margin="631,329,0,0"                Width="106" Grid.Column="2" RenderTransformOrigin="0.056,-0.333"/>
