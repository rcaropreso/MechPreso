        <Label       x:Name="lblStatusBar"           Content="Label"                                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,391,0,0"     Height="28"  Width="694" Grid.ColumnSpan="2" Grid.Column="1"/>

